#!/usr/bin/env sh

escape_sed() {
    echo "$*" | sed \
        -e 's/\//\\\//g' \
        -e 's/\&/\\\&/g' \
        -e 's/\ /\\\ /g'
}

if which greadlink > /dev/null 2>&1; then
    alias readlink=greadlink
fi

currentfolder="$(pwd)"

cd "$(dirname "$(dirname "$(readlink -f "$0")")../")"

# we need some configuration
if [ -e .env ]; then
    . "$(pwd)/.env"
elif [ -e .env-sample ]; then
    . "$(pwd)/.env-sample"
else
    echo "no config found"
    exit 1
fi

params=$(
    while [ ! -z "$1" ]; do
        echo -n $(escape_sed "$1")" "
        shift
    done
)

# running env?
running=$(run ps | grep Up | wc -l)
if [ $running -gt 0 ]; then
    bin/run exec application gosu www-data sh -c "magerun $params"
else
    . share/init

    docker run -it --rm \
        -v "$currentfolder":/phpapp \
        -e DEVELOPMENT="$DEVELOPMENT" \
        -e C_UID=$C_UID \
        -e C_GID=$C_GID \
        dockerwest/php-magento2:$PHPVERSION \
        magerun $params
fi

